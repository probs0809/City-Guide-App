<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.javamini.TravelCompanion">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name="com.javamini.TravelCompanion.SplashScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.javamini.TravelCompanion.MainActivity"
            android:label="Travel Companion"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name="com.javamini.TravelCompanion.HotelsActivity"
            android:label="Hotels"
            android:parentActivityName="com.javamini.TravelCompanion.MainActivity" />
        <activity
            android:name="com.javamini.TravelCompanion.ParksActivity"
            android:label="Parks"
            android:parentActivityName="com.javamini.TravelCompanion.MainActivity" />
        <activity
            android:name="com.javamini.TravelCompanion.RestaurantsActivity"
            android:label="Restaurants"
            android:parentActivityName="com.javamini.TravelCompanion.MainActivity" />
        <activity
            android:name="com.javamini.TravelCompanion.TouristsActivity"
            android:label="Tourist"
            android:parentActivityName="com.javamini.TravelCompanion.MainActivity" />
    </application>

</manifest>